{% extends 'base.html.twig' %}

{% block title %}BitCourse{% endblock %}

{% block body %}
  <nav>
    <div id="pln">-</div>
    <div id="eur">-</div>
    <div id="gbp">-</div>
    <div id="jpy">-</div>
    <div id="chf">-</div>
  </nav>
  <p class="center">Bitcoin price</p>
  <section>
    <table>
      <tr>
        <th rowspan="2">Price</th>
        <th>Today</th>
        <th>Yesterday</th>
        <th>Week ago</th>
        <th>Month ago</th>
      </tr>
      <tr>
        <td id="usd">-</td>
        <td id="yesterday">-
        </td>
        <td id="weekago">-
        </td>
        <td id="monthago">-
        </td>
      </tr>
    </table>
    <canvas id="myChart" width="400" height="150"></canvas>
    <script>
      var ctx = document.getElementById('myChart').getContext('2d');
      var myChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: [
            '6Y',
            '5Y',
            '4Y',
            '3Y',
            '2Y',
            '2017-12-16',
            '1Y',
            '6M',
            '3M',
            '1M',
            '3W',
            '1W',
            '3D',
            '1D',
            'Today'
          ],
          datasets: [
            {
              label: 'Bitcoin price',
              data: [
                {{ chart.0 }},
                {{ chart.1 }},
                {{ chart.2 }},
                {{ chart.3 }},
                {{ chart.4 }},
                {{ chart.5 }},
                {{ chart.6 }},
                {{ chart.7 }},
                {{ chart.8 }},
                {{ chart.9 }},
                {{ chart.10 }},
                {{ chart.11 }},
                {{ chart.12 }},
                {{ chart.13 }},
                {{ chart.14 }},
                {{ chart.15 }},
                {{ chart.16 }},
                {{ chart.17 }}
              ],
              backgroundColor: ['rgba(111, 111, 111, 0.2)'],
              borderColor: [
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)',
                'rgba(247,147,26, 1)'
              ],
              borderWidth: 1
            }
          ]
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true
                }
              }
            ]
          }
        }
      });
    </script>
  </section>
  <footer>
    Updated: <span id="updated">-</span> second ago | <a href="/data">API</a>
  </footer>
{% endblock %}
